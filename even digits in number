#include<stdio.h>
int evendigitex04(int n ){
	if (n<10){
		if(n%2==0)return 1;
		else return 0;
	}
	else {
		if ((n%10)%2==0)return 1+evendigitex04(n/10);
		else return 0+evendigitex04(n/10);
	}
}
main () 
{ 
	int number ;
	do {
	printf ("enter number");
	scanf ("%d",&number);
	}while(number<=0);
	printf ("the even digit in this number is :%d",evendigitex04(number));
}
