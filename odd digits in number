#include<stdio.h>
int odddigitex05(int n ){
	if (n<10){
		if(n%2==1)return 1;
		else return 0;
	}
	else {
		if ((n%10)%2==1)return 1+odddigitex05(n/10);
		else return 0+odddigitex05(n/10);
	}
}
main () 
{ 
	int number ;
	do {
	printf ("enter number");
	scanf ("%d",&number);
	}while(number<=0);
	printf ("the even digit in this number is :%d",odddigitex05(number));
}
